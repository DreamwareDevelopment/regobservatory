generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters", "postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("UNPOOLED_DATABASE_URL")
  extensions = [vector]
}

model ApplicationState {
  id                 String  @id
  nextProcessingDate String? @map("next_processing_date")
  runUntil           String? @map("run_until") // Development field to have reduced record fetching/processing
  isCaughtUp         Boolean @default(false) @map("is_caught_up")

  @@map("application_state")
}

model Agency {
  id            String  @id @default(uuid())
  name          String
  shortName     String? @map("short_name")
  displayName   String  @map("display_name")
  sortableName  String  @map("sortable_name")
  slug          String  @unique

  // CFR references as JSON
  cfrReferences Json[]  @map("cfr_references")

  // Self-relation for parent/child hierarchy
  parentId    String?   @map("parent_id")
  parent      Agency?   @relation("AgencyHierarchy", fields: [parentId], references: [id])
  children    Agency[]  @relation("AgencyHierarchy")

  sections    AgencySections[]
  history     AgencyHistory[]

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("agencies")
}

model Section {
  id         String   @id // `${title}.${identifier}`
  title      Int
  part       String
  identifier String
  content    String[]   // TODO: This should be put in blob storage
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  agencies   AgencySections[]
  embeddings SectionEmbedding[]

  @@map("sections")
}

model SectionEmbedding {
  id        String  @id @default(uuid())
  sectionId String
  section   Section @relation(fields: [sectionId], references: [id])
  text      String
  embedding Unsupported("vector(1536)")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("section_embeddings")
}

model AgencySections {
  sectionId String
  agencyId  String
  section   Section @relation(fields: [sectionId], references: [id])
  agency    Agency  @relation(fields: [agencyId], references: [id])

  @@id([agencyId, sectionId])
  @@map("agency_sections")
}

model AgencyHistory {
  id        String   @id @default(uuid())
  agencyId  String
  agency    Agency   @relation(fields: [agencyId], references: [id])
  wordCount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("agency_history")
}
